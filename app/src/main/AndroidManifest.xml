<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.star_wars">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_star_wars"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_star_wars"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Starwars">
        <activity
            android:name=".view.InformacoesPersonagens"
            android:parentActivityName=".view.GaleriaPersonagens" />
        <activity
            android:name=".view.DetalhesPlaneta"
            android:parentActivityName=".view.MenuPrincipal" />
        <activity
            android:name=".view.GaleriaPersonagens"
            android:launchMode="singleTop"
            android:parentActivityName=".view.MenuPrincipal" />
        <activity
            android:name=".view.ListaPlanetas"
            android:launchMode="singleTop"
            android:parentActivityName=".view.DetalhesPlaneta" />
        <activity
            android:name=".view.MenuPrincipal"
            android:parentActivityName=".view.MainActivity" />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>